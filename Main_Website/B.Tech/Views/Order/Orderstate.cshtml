@model Order


<div style="display: flex; justify-content: center; align-items: center; min-height: 60vh; font-family: Arial, sans-serif; background-color: #f8f9fa;">
    <div style="padding: 20px; border-radius: 8px; text-align: center;">
        <h1>Payment Confirmed</h1>
        <h4>Your Order is @Model.Status</h4>
        <h4>Your Order Number is @Model.OrderNumber</h4>
        <a href="/Home/Index" class="btn btn-primary" style="margin-top: 20px;">Continue Shopping</a>
    </div>
</div>












